# AquaPercent AI - Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SENSOR DATA SOURCES
# =============================================================================
# Real-time sensor data endpoint (leave empty to use simulated data)
NEXT_PUBLIC_SENSOR_DATA_SOURCE_URL=https://api.aquapercent.io/v1/sensors
NEXT_PUBLIC_SENSOR_POLLING_INTERVAL=2000

# =============================================================================
# WEATHER API CONFIGURATION
# =============================================================================
# Weather service integration (OpenWeatherMap, WeatherAPI, etc.)
NEXT_PUBLIC_WEATHER_API_KEY=sk_weather_abc123def456ghi789jkl012mno345
NEXT_PUBLIC_WEATHER_API_URL=https://api.weatherapi.com/v1

# =============================================================================
# MAP SERVICE CONFIGURATION
# =============================================================================
# Map and geolocation services (Google Maps, Mapbox, etc.)
NEXT_PUBLIC_MAP_SERVICE_KEY=pk.eyJ1IjoiYXF1YXBlcmNlbnQiLCJhIjoiY2x4eXo5ODEyMDNhMjJxcGx3ZjN2YzR4eSJ9.fake_token_example
NEXT_PUBLIC_MAP_SERVICE_URL=https://api.mapbox.com/v4

# =============================================================================
# AI & PREDICTION ENGINE
# =============================================================================
# Machine learning prediction service endpoint
NEXT_PUBLIC_PREDICTION_ENGINE_URL=https://ai.aquapercent.io/v2/predict
NEXT_PUBLIC_AI_MODEL_VERSION=v2.4.1

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Alert and notification delivery endpoints
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=https://notify.aquapercent.io/v1/send
NEXT_PUBLIC_EMAIL_SERVICE_URL=https://email.aquapercent.io/v1/dispatch

# =============================================================================
# DATA STREAMING CONFIGURATION
# =============================================================================
# Real-time data update intervals (milliseconds)
NEXT_PUBLIC_DATA_STREAM_INTERVAL=2000
NEXT_PUBLIC_SYSTEM_HEARTBEAT_INTERVAL=3000

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# System monitoring configuration
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=5000
NEXT_PUBLIC_LOG_RETENTION_HOURS=24

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Feature flags and system behavior
NEXT_PUBLIC_ENABLE_REAL_TIME_SYNC=true
NEXT_PUBLIC_ENABLE_DATA_CACHING=true
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=3

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Environment identifier (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_API_TIMEOUT=5000

# =============================================================================
# OPTIONAL: DATABASE CONFIGURATION
# =============================================================================
# Database connection (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/aquapercent_db
# REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL: AUTHENTICATION SERVICES
# =============================================================================
# External authentication providers (Auth0, Firebase, etc.)
# NEXT_PUBLIC_AUTH_DOMAIN=aquapercent.auth0.com
# NEXT_PUBLIC_AUTH_CLIENT_ID=abc123def456ghi789
# AUTH_CLIENT_SECRET=secret_xyz789abc123def456

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================
# Third-party analytics and monitoring services
# NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://abc123@sentry.io/456789
# DATADOG_API_KEY=dd_api_key_example

# =============================================================================
# OPTIONAL: CLOUD STORAGE
# =============================================================================
# Cloud storage for reports and backups (AWS S3, Azure Blob, etc.)
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=aquapercent-data

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Keep this .env.example file updated with new variables
# 3. Empty values will trigger automatic fallback to simulated data
# 4. All NEXT_PUBLIC_ variables are exposed to the browser
# 5. Non-prefixed variables are server-side only
